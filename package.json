{
  "name": "terminal-hook",
  "displayName": "Terminal Hook",
  "description": "MCP server that captures and exposes terminal output for AI assistants",
  "version": "1.0.0",
  "author": {
    "name": "rodgomesc",
    "email": "rodgomesc@gmail.com"
  },
  "publisher": "rodgomesc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.93.0"
  },
  "repository": {
		"type": "git",
		"url": "https://github.com/rodgomesc/terminal-hook"
	},
  "enabledApiProposals": [
    "terminalDataWriteEvent"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "bin": {
    "terminal-hook": "./mcp-server.mjs"
  },
  "contributes": {
    "commands": [
      {
        "command": "terminal-hook.getTerminalOutput",
        "title": "Terminal Hook: Get Output"
      },
      {
        "command": "terminal-hook.listTerminals",
        "title": "Terminal Hook: List Terminals"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^4.2.1"
  }
}
