{
  "name": "terminal-hook",
  "displayName": "Terminal Hook",
  "description": "MCP server that captures and exposes terminal output for AI assistants",
  "version": "1.0.0",
  "author": {
    "name": "rodgomesc",
    "email": "rodgomesc@gmail.com"
  },
  "publisher": "rodgomesc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.93.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rodgomesc/terminal-hook"
  },
  "enabledApiProposals": [
    "terminalDataWriteEvent"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "bin": {
    "terminal-hook": "./out/mcp-server.cjs"
  },
  "contributes": {
    "commands": [
      {
        "command": "terminal-hook.getTerminalOutput",
        "title": "Terminal Hook: Get Output"
      },
      {
        "command": "terminal-hook.listTerminals",
        "title": "Terminal Hook: List Terminals"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run compile && bun run bundle:mcp",
    "compile": "tsc -p ./",
    "bundle:mcp": "esbuild mcp-server.mjs --bundle --platform=node --target=node18 --outfile=out/mcp-server.cjs --format=cjs",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "package": "vsce package"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.93.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.2.2",
    "esbuild": "0.27.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^4.2.1"
  }
}
